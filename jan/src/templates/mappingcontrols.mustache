<div class="transition-controlls"  data-id="">
    <div class="close-controlls"><div class="close-button"></div></div>
    <div class="action-selector">
        <div class="headline">{{formname}}</div>
        <div class="edit-form">
            <div class="edit-button">
                <i class="icon icon-edit"></i>
            </div>
            <div class="label">Upraviť</div>
        </div>
        <div class="change-form">
            <div class="rename-button">
                <i class="icon icon-rename"></i>
            </div>
            <div class="label">Premenovať</div>
        </div>
        <div class="remove-form">
            <div class="remove-button">
                <i class="icon icon-delete"></i>
            </div>
            <div class="label">Odstrániť</div>
        </div>
    </div>

    <div class="remove-form-confirm" >
        <div class="headline">{{formname}}</div>
        <div class="question">Ste si istý, že chcete odstrániť formulár z tohto prechodu ?</div>
        <div class="cancel">Zrušiť</div>
        <div class="remove">Odstrániť</div>
    </div>

    <div class="change-form-name-confirm">
        <div class="headline">Premenovať formulár</div>
        <input class="form-name" value="{{formname}}">
        <div class="cancel">Zrušiť</div>
        <div class="save">Premenovať</div>
    </div>

</div>